<body>
    <div class="container">
        <div class="header">
            <h1>üöÄ ERP Data Automation Dashboard</h1>
            <div class="header-info">
                <div class="last-update">
                    Last Updated: <span id="lastUpdate">Loading...</span>
                </div>
                <button class="refresh-btn" onclick="refreshData()">üîÑ Refresh Data</button>
            </div>
        </div>
        
        <div class="stats-grid" id="statsGrid">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading dashboard data...</p>
            </div>
        </div>
        
        <div class="data-section">
            <h2>üìä Department Data</h2>
            <div class="department-tabs">
                <button class="tab-btn active" onclick="showDepartment('purchase')">Purchase</button>
                <button class="tab-btn" onclick="showDepartment('production')">Production</button>
                <button class="tab-btn" onclick="showDepartment('packing')">Packing</button>
                <button class="tab-btn" onclick="showDepartment('shipment')">Shipment</button>
            </div>
            <div id="departmentData">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading department data...</p>
                </div>
            </div>
        </div>
        
        <div class="download-section">
            <h2>üì• Download Reports</h2>
            <div class="download-buttons">
                <a href="/api/download/excel" class="download-btn">üìä Download Excel Report</a>
                <a href="/api/download/purchase_csv" class="download-btn">üìÑ Purchase CSV</a>
                <a href="/api/download/production_csv" class="download-btn">üìÑ Production CSV</a>
                <a href="/api/download/packing_csv" class="download-btn">üìÑ Packing CSV</a>
                <a href="/api/download/shipment_csv" class="download-btn">üìÑ Shipment CSV</a>
            </div>
        </div>
    </div>
    
    <script>
        let currentDepartment = 'purchase';
        
        async function loadSummary() {
            try {
                const response = await fetch('/api/summary');
                const data = await response.json();
                
                document.getElementById('lastUpdate').textContent = data.last_updated;
                
                const statsHtml = `
                    <div class="stat-card purchase">
                        <h2><span class="stat-icon">üì¶</span> Purchase</h2>
                        <div class="stat-row">
                            <span class="stat-label">Total Orders</span>
                            <span class="stat-value">${data.purchase.total_orders}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Pending</span>
                            <span class="stat-value">${data.purchase.pending}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Total Amount</span>
                            <span class="stat-value">‚Çπ${data.purchase.total_amount.toFixed(2)}</span>
                        </div>
                    </div>
                    
                    <div class="stat-card production">
                        <h2><span class="stat-icon">‚öôÔ∏è</span> Production</h2>
                        <div class="stat-row">
                            <span class="stat-label">Total Units</span>
                            <span class="stat-value">${data.production.total_units}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Completed</span>
                            <span class="stat-value">${data.production.completed}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">In Progress</span>
                            <span class="stat-value">${data.production.in_progress}</span>
                        </div>
                    </div>
                    
                    <div class="stat-card packing">
                        <h2><span class="stat-icon">üì¶</span> Packing</h2>
                        <div class="stat-row">
                            <span class="stat-label">Total Packed</span>
                            <span class="stat-value">${data.packing.total_packed}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Completed</span>
                            <span class="stat-value">${data.packing.completed}</span>
                        </div>
                    </div>
                    
                    <div class="stat-card shipment">
                        <h2><span class="stat-icon">üöö</span> Shipment</h2>
                        <div class="stat-row">
                            <span class="stat-label">Total Shipments</span>
                            <span class="stat-value">${data.shipment.total_shipments}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Dispatched</span>
                            <span class="stat-value">${data.shipment.dispatched}</span>
                        </div>
                        <div class="stat-row">
                            <span class="stat-label">Pending</span>
                            <span class="stat-value">${data.shipment.pending}</span>
                        </div>
                    </div>
                `;
                
                document.getElementById('statsGrid').innerHTML = statsHtml;
            } catch (error) {
                console.error('Error loading summary:', error);
                document.getElementById('statsGrid').innerHTML = '<p>Error loading data</p>';
            }
        }
        
        async function showDepartment(dept) {
            currentDepartment = dept;
            
            // Update active tab
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.getElementById('departmentData').innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading ${dept} data...</p>
                </div>
            `;
            
            try {
                const response = await fetch(`/api/department/${dept}`);
                const result = await response.json();
                
                if (result.data && result.data.length > 0) {
                    const columns = Object.keys(result.data[0]);
                    let tableHtml = '<table class="data-table"><thead><tr>';
                    
                    columns.forEach(col => {
                        tableHtml += `<th>${col.replace(/_/g, ' ').toUpperCase()}</th>`;
                    });
                    tableHtml += '</tr></thead><tbody>';
                    
                    result.data.forEach(row => {
                        tableHtml += '<tr>';
                        columns.forEach(col => {
                            let value = row[col];
                            
                            if (col === 'status') {
                                const statusClass = value.toLowerCase().replace(' ', '-');
                                value = `<span class="status-badge status-${statusClass}">${value}</span>`;
                            }
                            
                            tableHtml += `<td>${value}</td>`;
                        });
                        tableHtml += '</tr>';
                    });
                    
                    tableHtml += '</tbody></table>';
                    document.getElementById('departmentData').innerHTML = tableHtml;
                } else {
                    document.getElementById('departmentData').innerHTML = '<p>No data available</p>';
                }
            } catch (error) {
                console.error('Error loading department data:', error);
                document.getElementById('departmentData').innerHTML = '<p>Error loading data</p>';
            }
        }
        
        async function refreshData() {
            const btn = event.target;
            btn.disabled = true;
            btn.textContent = '‚è≥ Refreshing...';
            
            try {
                await fetch('/api/refresh', { method: 'POST' });
                setTimeout(async () => {
                    await loadSummary();
                    await showDepartment(currentDepartment);
                    btn.disabled = false;
                    btn.textContent = 'üîÑ Refresh Data';
                }, 2000);
            } catch (error) {
                console.error('Error refreshing data:', error);
                btn.disabled = false;
                btn.textContent = 'üîÑ Refresh Data';
            }
        }
        
        // Initial load
        loadSummary();
        showDepartment('purchase');
        
        // Auto-refresh every 5 minutes
        setInterval(loadSummary, 300000);
    </script>
</body>
</html>
